#!/bin/sh

set -e

OUTPUT=$TMPDIR/xctester
CMD="`python -c 'import os,sys;print os.path.realpath(sys.argv[1])' $0`"
SOURCE_DIR="`dirname "$CMD"`"

SDK_PATH="`xcrun --show-sdk-path`"
FRAMEWORKS_PATH="$SDK_PATH/../../Library/Frameworks"

if [ -z "$1" ]
then
	files=`ls *.swift`
else
	files=$@
fi

xcrun swiftc -o "$OUTPUT" -F"$FRAMEWORKS_PATH" -Xlinker -rpath \
	-Xlinker "$FRAMEWORKS_PATH" "$SOURCE_DIR"/../code/*.swift $files

"$OUTPUT"
exit_code=$?

rm -f "$OUTPUT"

exit $exit_code
